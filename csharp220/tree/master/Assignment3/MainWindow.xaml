<Window x:Class="Assignment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <ListView x:Name="uxList" GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler">
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="100">
                </GridViewColumn>
                <GridViewColumn DisplayMemberBinding="{Binding Password}" Header="Password" Width="100">
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
