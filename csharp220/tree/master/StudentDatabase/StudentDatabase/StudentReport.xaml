<Window x:Class="StudentDatabase.StudentReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentDatabase"
        mc:Ignorable="d"
        Title="StudentReport" Height="450" Width="800">
    <ListView x:Name="uxStudentList" Height="400">
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Address}" Header="Address" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Gender}" Header="Gender" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding DOB}" Header="DOB" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Course}" Header="Course" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Phone}" Header="Phone" Width="100" />
            </GridView>
        </ListView.View>
    </ListView>
</Window>
